Source: "F:\Releases\Omni Preview\Products\Windows\src\media_kit_libs_windows_video_plugin.dll"; DestDir: "{app}"; Flags: ignoreversion
Source: "F:\Releases\Omni Preview\Products\Windows\src\media_kit_video_plugin.dll"; DestDir: "{app}"; Flags: ignoreversion
Source: "F:\Releases\Omni Preview\Products\Windows\src\OmniPreview.exe"; DestDir: "{app}"; Flags: ignoreversion
Source: "F:\Releases\Omni Preview\Products\Windows\src\pdfium.dll"; DestDir: "{app}"; Flags: ignoreversion
Source: "F:\Releases\Omni Preview\Products\Windows\src\post-uninstall.bat"; DestDir: "{app}"; Flags: ignoreversion
