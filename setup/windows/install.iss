[Run]
Filename: "{app}\post-install.bat"; WorkingDir: "{app}"; Flags: runhidden shellexec
Filename: "{app}\{#MyAppExeName}"; Description: "{cm:LaunchProgram,{#StringChange(MyAppName, '&', '&&')}}"; Flags: nowait postinstall skipifsilent


[Code]

procedure CurUninstallStepChanged(CurUninstallStep: TUninstallStep);
var
  BatPath: string;
  ResultCode: Integer;
begin
  // Only run during uninstall phase
  if CurUninstallStep = usUninstall then
  begin
    BatPath := ExpandConstant('{app}\post-uninstall.bat');

    // Execute the BAT silently if it exists
    if FileExists(BatPath) then
      Exec(BatPath, '', '', SW_HIDE, ewWaitUntilTerminated, ResultCode);
  end;
end;


